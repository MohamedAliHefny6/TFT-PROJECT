#ifndef		_MUART_CFG_H
#define		_MUART_CFG_H
/**------------------------USART NUM------------------------:
Options:
		(1) USART1
		(2) USART2
		(2) USART6
**/
#define 	USART_NUM							USART1
#define 	USART_NUM2							USART2

/**------------------------USART Oversampling------------------------:
Options:
		(1) USART_16_Oversampling
		(2) USART_8_Oversampling
**/
#define 	USART_OVERSAMLING					USART_16_Oversampling

/**------------------------USART Word Length------------------------:
Options:
		(1) USART_8BITS_DATA
		(2) USART_9BITS_DATA
**/
#define 	USART_WORD_LENGTH					USART_8BITS_DATA



/**------------------------USART Parity Control Enable------------------------:
Options:
		(1)	USART_PARITY_CONTROL_DISABLED
		(2)	USART_PARITY_CONTROL_ENABLED
**/
#define 	USART_u8_PARITY_CONTROL				USART_PARITY_CONTROL_DISABLED



/**----------------------USART Parity Selection----------------------:
Options:
		(1) USART_EVEN_PARITY
		(2) USART_ODD_PARITY
**/
#define 	USART_PARITY_SELECTION				USART_EVEN_PARITY



/**-------------------USART Stop Bits-------------------:
Options:
		(1)	USART_1_STOP_BIT
		(2) USART_HALF_STOP_BIT
		(3) USART_2_STOP_BIT
		(4) USART_1_AND_HALF_STOP_BIT
**/
#define		USART_STOP_BITS						USART_1_STOP_BIT

/**-------------------USART Clock Polarity-------------------:
Options:
		(1)	USART_LOW_VALUE
		(2) USART_HIGH_VALUE
**/
#define		USART_POLARITY						USART_LOW_VALUE

/**-------------------USART Clock Phase-------------------:
Options:
		(1)	USART_READ_FIRST
		(2) USART_WRITE_FIRST
**/

#define		USART_PHASE							USART_WRITE_FIRST

/**-------------------USART BAUD RATE-------------------:
Options:
		(1)	USART_BAUD_RATE_9600
		(2) USART_BAUD_RATE_115200
**/
#define		USART_BAUD_RATE						USART_BAUD_RATE_9600
	
#endif
